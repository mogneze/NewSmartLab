<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/grey_corners" />
                    <solid android:color="@color/grey_back"/>
                    <corners android:radius="10dp" />
                    <padding android:bottom="20dp" android:right="20dp" android:top="20dp"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="@drawable/arrow_down" />
            </item>
        </layer-list>
    </item>
</selector>