<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartLab" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="colorPrimary">@color/active_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/inactive_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="textAllCaps">false</item>
    </style>
    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">16dp</item>
    </style>
    <style name="Theme.SmartLab.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="Text">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>
    <style name="TextBold">
        <item name="fontFamily">@font/sf_pro_display_bold</item>
    </style>
</resources>